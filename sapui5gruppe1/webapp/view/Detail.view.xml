<mvc:View
	controllerName="sapui5gruppe1.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle id="dpdynamicpagetitle1">
				<actions>
					<m:ToggleButton id="dptogglebtn1"
						text="Edit"
						type="Emphasized"
						press=".onEditToggleButtonPress"/>
					<m:Button id="dpbtn1"
						text="Delete"
						type="Transparent"/>
					<m:Button id="dpbtn2"
						text="Copy"
						type="Transparent"/>
					<m:Button id="dpbtn3"
						icon="sap-icon://action"
						type="Transparent"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox id="dpFlexBox1" wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<m:Avatar id="dpavatar1"
					displaySize="L"
					displayShape="Square"
					class="sapUiTinyMarginEnd">
				</m:Avatar>
				<m:VBox id="dpvbox1" justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label id="dpvbox1lbl1" text="Kategorie"/>
				</m:VBox>
				<m:VBox id="dpvbox2" justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label id="dpvbox2lbl1" text="Preis"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection id="dpsection1" title="Allgemeine Information">
				<subSections>
					<ObjectPageSubSection id="dpsection1sub1">
						<blocks>
							<form:SimpleForm id="dpsection1simpleform1"
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label id="dpsection1lbl1" text="Produkt ID"/>
									<m:Label id="dpsection1lbl2" text="Beschreibung"/>
									<m:Label id="dpsection1lbl3" text="Lieferant"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
			<m:OverflowToolbar id="oftoolbar1">
				<m:ToolbarSpacer id="toolbarspacer1"/>
				<m:Button id="toolbarspacer1btn1" type="Accept" text="Save"/>
				<m:Button id="toolbarspacer1btn2" type="Reject" text="Cancel"/>
			</m:OverflowToolbar>
		</footer>

	</ObjectPageLayout>
</mvc:View>